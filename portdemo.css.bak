 
 body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image:url("1.jpeg");
			background-repeat:no-repeat ;
			background-size:cover;
        }

	h1{
		font-family: 'Brush Script MT',cursive;
		color:  red;
	}
        header {
			background-image:url("4.jpeg");
			background-repeat:no-repeat ;
			background-size:cover;
            color: #fff;
            text-align: center;
            padding: 2rem 0;
            position: relative; 
        }

        .header-content h1 {
            font-size: 2.5rem;
        }

		.profile-picture {
            width: 100px; /* size of pic  */
            height: 100px;
            border-radius: 75%; /* circle shape */
            object-fit: cover; 
            position: absolute; 
            top: 75px; /* top position  */
            left: 75px; /*  left position */
        }

        nav { 
            text-align: center;
        }

        nav ul {
            list-style-type: none;
            padding: 0;
        }

        nav ul li {
            display: inline;
            margin: 0 20px;
        }

        nav ul li a {
            text-decoration: none;
            color:  black;
			font-size:20px;
        }

        .section-content {
            background-color: light blue;
            padding: 2rem;
            margin: 1rem;
            border-radius: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: justify;
        }

        
        footer {
            text-align: center;
            color:  black;
			font-size:20px;
        }

        ul {
            list-style-type: disc;
            padding-left: 20px;
        }
